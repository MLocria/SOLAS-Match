{
    "name": "rosetta-foundation/solas-match",
    "description": "A translation platform for NGOs",

    "repositories": [
        {
            "source": {
                "name": "slim/slim",
                "url": "https://github.com/codeguy/Slim.git",
                "type": "git",
                "reference": "master"
            },
            "type": "package",
            "package": {
                "name": "drslump/protobuf-php",
                "version": "0.9.4",
                "type": "git",
                "source": {
                    "url": "git://github.com/drslump/Protobuf-PHP.git",
                    "type": "git",
                    "reference": "master"
                },
                "autoload": {
                    "files": ["library/DrSlump/Protobuf.php"]
                }
            }
        }         
    ],

    "require-dev": {
            "phpunit/phpunit": "3.7.*"
    },

    "require": {
        "slim/slim": "2.4.0",
        "videlalvaro/php-amqplib": "dev-master",
        "drslump/protobuf-php": "*",
        "league/oauth2-server": "3.*"
    },
    
    "autoload": {
        "classmap": ["vendor/slim/slim/Slim/View.php"]    
    },

    "authors": [
        {
            "name": "spaceindaver",
            "email": "spaceindaver0@gmail.com"
        }
    ]
